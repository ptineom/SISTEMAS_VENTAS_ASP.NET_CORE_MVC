
@{
    ViewData["Title"] = "ReaperturaCajaIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="card rounded-0 mb-1">
    <div class="card-header bg-transparent py-1 fs-6">
        <i class="bi bi-funnel-fill align-text-bottom"></i> Búsqueda por filtros
    </div>
    <div class="card-body py-1 px-2">
        <div class="row">
            <div class="col-12 col-md-3">
                <label class="form-label mb-1">Caja</label>
                <select class="form-select form-select-sm" id="cboCaja" aria-label=".form-select-lg example">
                    <option value="">---Seleccione---</option>
                    @if (ViewBag.listCajas != null)
                    {
                        foreach (var item in ViewBag.listCajas)
                        {
                            <option value="@item.IdCaja">@item.NomCaja</option>
                        }
                    }
                </select>
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label mb-1">Usuario</label>
                <select class="form-select form-select-sm" id="cboUsuario" aria-label=".form-select-lg example">
                    <option value="">---Seleccione---</option>
                    @if (ViewBag.listUsuarios != null)
                    {
                        foreach (var item in ViewBag.listUsuarios)
                        {
                            <option value="@item.IdUsuario">@item.NomUsuario</option>
                        }
                    }
                </select>
            </div>
            <div class="col-12 col-md-4">
                <label class="form-label mb-1">Rango de fechas</label>
                <div class="input-group input-group-sm date input-daterange">
                    <input type="text" class="form-control date-picker" id="txtRanFecIni" name="start" autocomplete="off">
                    <div class="input-group-text"><i class="bi bi-distribute-vertical"></i></div>
                    <input type="text" class="form-control date-picker" id="txtRanFecFin" name="end" autocomplete="off">
                </div>
            </div>
            <div class="col-6 col-md-2 d-flex align-items-end">
                <button type="button" class="btn btn-primary" id="btnConsultar"><i class="bi bi-search"></i> Consultar</button>
            </div>
        </div>
    </div>
</div>
<div class="card rounded-0">
    <div class="card-header py-1 fs-6">
        <i class="bi bi-clipboard-data"></i> <span class=""> Listado de cajas aperturadas</span>
    </div>
    <div class="card-body py-0 px-0">
        <div class="table-responsive">
            <table id="tblConsultarCajaApertura" class="table table-striped table-hover table-sm " style="width:100%">
                <thead>
                    <tr>
                        <th class="text-center"></th>
                        <th class="py-1">Descripción caja</th>
                        <th class="py-1" style="min-width:150px">Usuario</th>
                        <th class="py-1">Fecha apertura</th>
                        <th class="py-1">Fecha cierre</th>
                        <th class="py-1">Monto apertura</th>
                        <th class="py-1">Monto total</th>
                        <th class="py-1">Estado</th>
                        <th class="d-none">IdCaja</th>
                        <th class="d-none">IdUsuario</th>
                        <th class="d-none">Correlativo</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>

            </table>
        </div>
    </div>
</div>

@section myScript{
    <script src="~/js/reaperturaCaja.js"></script>
}